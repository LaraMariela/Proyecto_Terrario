import time
import sys
import Metodos
from Metodos import*


def main():
    pass

if __name__ == '__main__':
    main()



Flag= True
MinTemperature= Metodos.MinTemp()
MaxTemperature= Metodos.MaxTemp()

while(Flag):

  Temperature= Metodos.GetTemperature()
  print (time.strftime("%H:%M:%S") ) ##MUESTRA HORA DEL ORDENADOR
  Metodos.CheckTemperature(Temperature, MinTemperature, MaxTemperature) ##REVISA Y MUESTRA AVISOS
  Metodos.ShowValues(Temperature, MinTemperature, MaxTemperature)
  time.sleep(5)
  print("-----------")
  Key= input("welcome, Click the S key to start")
  Flag= Metodos.Activate(Key)
 ## Bandera=False

print ("Termina el ciclo")




