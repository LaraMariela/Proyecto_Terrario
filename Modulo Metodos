def Activate(A):
    if(A=="S" or A=="s"):
        return True
    else:
        return False


def CheckTemperature(Temp, Minimum, Maximum): ##COMPARA TEMPERATURAS Y ALERTA

   if(Temp<Minimum):
         Advise(Temp)

   elif ( Temp>Maximum):

        Advise2(Temp)

   else:
        Advise3(Temp)


def Advise1(valor):  ##Cold Alert
    print (valor , ": es demasiado frio, favor de calentar")

def Advise2(valor): ##Warm Alert
    print (valor , ": es demasiado calor, favor de enfriar")

def Advise3(valor): ##Perfect Advice
    print (valor , ": temperatura perfecta")

def GetTemperature(): ##OBTIENE LA TEMPERATURA DADA POR LA PLACA

    return 20


def MinTemp(): ##RETORNA LA TEMPERATURA MINIMA DESEADA

    return 19

def MaxTemp(): ##RETORNA LA TEMPERATURA MAXIMA TOLERADA

    return 30


def ShowValues(GetTemperature, MinTemp, MaxTemp): ##MUESTRA EN PANTALLA LAS TEMPERATURAS ACTUAL, MINIMA Y MAXIMA
    print("Temperatura actual:" , GetTemperature , "   Minimo deseado:" , MinTemp , "   Maximo tolerable:" , MaxTemp)
