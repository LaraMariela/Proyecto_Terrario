def PonerTodoEnMarcha(A):
 while(Reloj()== MomentoDeChequear()): ##FALTA HACER ESTABLECER LA CONDICION.
   if (A==1):
     return True
   elif (A==2):
     return False
   else:
      return True

def ChequearTemperatura(Temp, TempMin, TempMax): ##FUNCION QUE COMPARA A LA TEMPERATURA ACTUAL CON LA MINIMA DESEADA Y LA MAXIMA TOLERADA

   if(Temp<TempMin):
         Cartel1(Temp)

   elif ( Temp>TempMax):

        Cartel2(Temp)

   else:
        Cartel3(Temp)

def Reloj(): ##ESTA FUNCION DEBE OBTENER EL VALOR TIEMPO DE LA PLACA
    valor=xxx
    return valor

def MomentoDeChequear(): ##VALOR DEBE SER IGUAL AL MOMENTO APROPIADO DE CHEQUEAR
    valor=xxx
    return valor

def Cartel1(valor):  ##CARTEL SOBRE FRIO
    print (valor , "grados es demasiado frio, por favor calentar el ambiente!!")

def Cartel2(valor): ##CARTEL SOBRE CALOR
    print (valor , "grados es demasiado calor, por favor calentar el ambiente!!")

def Cartel3(valor): ##CARTEL DE TEMPERATURA IDEAL
    print (valor , "grados es la temperatura perfecta")

def ObtenerTemperatura(): ##FUNCION QUE DEBE OBTENER LA TEMPERATURA DADA POR LA PLACA
    resultado=20
    return resultado

def ObtenerHumedad(B):  ##FUNCION QUE DEBE OBTENER LA HUMEDAD DADA POR LA PLACA
    resultado=B
    return resultado

def TemperaturaMinima(C): ##FUNCION QUE DEBE OBTENER LA TEMPERATURA MINIMA DESEADA
    resultado=C
    return resultado

def TemperaturaMaxima(D): ##FUNCION QUE DEBE OBTENER LA TEMPERATURA MAXIMA TOLERADA
    resultado=D
    return resultado

def MostrarValores(E, F, G): ##FUNCION QUE MUESTRA EN PANTALLA LAS TEMPERATURAS ACTUAL, MINIMA Y MAXIMA
    print("Temperatura actual:" , E , "   Minimo deseado:" , F , "   Maximo tolerable:" , G)

